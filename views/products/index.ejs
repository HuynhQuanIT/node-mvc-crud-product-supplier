<%- include('../partials/header') %>

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h2 mb-2">
                    <i class="fas fa-box text-success me-2"></i>
                    Quản lý Sản phẩm
                </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Sản phẩm</li>
                    </ol>
                </nav>
            </div>
            <div>
                <a href="/products/new" class="btn btn-success btn-lg">
                    <i class="fas fa-plus me-2"></i>Thêm sản phẩm
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="card border-0 bg-success text-white">
            <div class="card-body text-center">
                <i class="fas fa-box fa-2x mb-2"></i>
                <h4 class="mb-0"><%= products.length %></h4>
                <small>Tổng sản phẩm</small>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="card border-0 bg-info text-white">
            <div class="card-body text-center">
                <i class="fas fa-cubes fa-2x mb-2"></i>
                <h4 class="mb-0"><%= products.reduce((sum, p) => sum + p.quantity, 0) %></h4>
                <small>Tổng số lượng</small>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="card border-0 bg-warning text-white">
            <div class="card-body text-center">
                <i class="fas fa-dollar-sign fa-2x mb-2"></i>
                <h4 class="mb-0">$<%= products.reduce((sum, p) => sum + (p.price * p.quantity), 0).toLocaleString() %></h4>
                <small>Tổng giá trị</small>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="card border-0 bg-primary text-white">
            <div class="card-body text-center">
                <i class="fas fa-building fa-2x mb-2"></i>
                <h4 class="mb-0"><%= [...new Set(products.map(p => p.supplierId._id))].length %></h4>
                <small>Nhà cung cấp</small>
            </div>
        </div>
    </div>
</div>

<!-- Products Table -->
<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0">
                    <i class="fas fa-list me-2"></i>Danh sách sản phẩm
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-dark text-white">
                            <tr>
                                <th class="border-0 ps-4">
                                    <i class="fas fa-tag me-1"></i>Sản phẩm
                                </th>
                                <th class="border-0">
                                    <i class="fas fa-dollar-sign me-1"></i>Giá
                                </th>
                                <th class="border-0">
                                    <i class="fas fa-cubes me-1"></i>Số lượng
                                </th>
                                <th class="border-0">
                                    <i class="fas fa-building me-1"></i>Nhà cung cấp
                                </th>
                                <th class="border-0">
                                    <i class="fas fa-calendar me-1"></i>Ngày tạo
                                </th>
                                <th class="border-0 text-center">
                                    <i class="fas fa-cog me-1"></i>Thao tác
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach(product => { %>
                            <tr class="product-row">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="product-icon bg-success text-white me-3">
                                            <i class="fas fa-box"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0 fw-bold"><%= product.name %></h6>
                                            <small class="text-muted">ID: <%= product._id.toString().slice(-6) %></small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-success fs-6">$<%= product.price.toFixed(2) %></span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="badge <%= product.quantity > 50 ? 'bg-success' : product.quantity > 10 ? 'bg-warning' : 'bg-danger' %> me-2">
                                            <%= product.quantity %>
                                        </span>
                                        <small class="text-muted">units</small>
                                    </div>
                                </td>
                                <td>
                                    <a href="/suppliers/<%= product.supplierId._id %>" class="text-decoration-none">
                                        <i class="fas fa-building me-1 text-primary"></i>
                                        <%= product.supplierId.name %>
                                    </a>
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span><%= product.createdAt.toLocaleDateString('vi-VN') %></span>
                                        <small class="text-muted"><%= product.createdAt.toLocaleTimeString('vi-VN') %></small>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="/products/<%= product._id %>" class="btn btn-sm btn-outline-info" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/products/<%= product._id %>/edit" class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" title="Xóa" onclick="confirmDelete('<%= product._id %>', '<%= product.name %>')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    Xác nhận xóa
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa sản phẩm <strong id="productName"></strong> không?</p>
                <p class="text-muted small">Hành động này không thể hoàn tác.</p>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form method="POST" style="display: inline;" id="deleteForm">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Xóa
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
.product-icon {
    width: 40px;
    height: 40px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
}

.product-row:hover {
    background-color: rgba(40, 167, 69, 0.02);
}
</style>

<script>
// Delete confirmation
function confirmDelete(id, name) {
    document.getElementById('productName').textContent = name;
    document.getElementById('deleteForm').action = `/products/${id}?_method=DELETE`;
    new bootstrap.Modal(document.getElementById('deleteModal')).show();
}
</script>

<%- include('../partials/footer') %>