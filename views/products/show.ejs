<%- include('../partials/header') %>

<h1>Product Details</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text"><strong>Price:</strong> $<%= product.price.toFixed(2) %></p>
                <p class="card-text"><strong>Quantity:</strong> <%= product.quantity %></p>
                <p class="card-text"><strong>Supplier:</strong> 
                    <a href="/suppliers/<%= product.supplierId._id %>"><%= product.supplierId.name %></a>
                </p>
                <p class="card-text"><small class="text-muted">Created: <%= product.createdAt.toLocaleDateString() %></small></p>
            </div>
        </div>
        
        <div class="mt-3">
            <a href="/products/<%= product._id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/products" class="btn btn-secondary">Back to List</a>
            <form method="POST" action="/products/<%= product._id %>?_method=DELETE" style="display: inline;">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
            </form>
        </div>
    </div>
    
    <div class="col-md-4">
        <h3>Supplier Information</h3>
        <div class="card">
            <div class="card-body">
                <h6 class="card-title"><%= product.supplierId.name %></h6>
                <p class="card-text"><strong>Address:</strong> <%= product.supplierId.address %></p>
                <p class="card-text"><strong>Phone:</strong> <%= product.supplierId.phone %></p>
                <a href="/suppliers/<%= product.supplierId._id %>" class="btn btn-sm btn-primary">View Supplier</a>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>