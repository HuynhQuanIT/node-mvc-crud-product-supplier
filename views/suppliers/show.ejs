<%- include('../partials/header') %>

<div class="row">
    <div class="col-md-8">
        <h1>Supplier Details</h1>
        
        <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger"><%= error %></div>
        <% } %>
        
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= supplier.name %></h5>
                <p class="card-text"><strong>Address:</strong> <%= supplier.address %></p>
                <p class="card-text"><strong>Phone:</strong> <%= supplier.phone %></p>
                <p class="card-text"><small class="text-muted">Created: <%= supplier.createdAt.toLocaleDateString() %></small></p>
            </div>
        </div>
        
        <div class="mt-3">
            <a href="/suppliers/<%= supplier._id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/suppliers" class="btn btn-secondary">Back to List</a>
            <form method="POST" action="/suppliers/<%= supplier._id %>?_method=DELETE" style="display: inline;">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
            </form>
        </div>
    </div>
    
    <div class="col-md-4">
        <h3>Products from this Supplier</h3>
        <% if (products && products.length > 0) { %>
            <ul class="list-group">
                <% products.forEach(product => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="/products/<%= product._id %>"><%= product.name %></a>
                    <span class="badge bg-primary rounded-pill">$<%= product.price %></span>
                </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p class="text-muted">No products from this supplier.</p>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>